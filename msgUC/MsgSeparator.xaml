<UserControl x:Class="MsgSeparator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:msgUC"
             mc:Ignorable="d" d:DesignWidth="300" Height="Auto">
    <Grid Margin="10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition  />
        </Grid.ColumnDefinitions>
        <Separator Grid.Column="0" x:Name="sepl" HorizontalAlignment="Stretch" Height="14" Margin="0" VerticalAlignment="Center" Width="Auto" Background="#FF5A88D6"/>
        <Label Grid.Column="1" x:Name="sepText" Content="Label" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="#FF246CC3" FontFamily="Segoe UI Light" FontSize="16"/>
        <Separator Grid.Column="2" x:Name="sepr" HorizontalAlignment="Stretch" Height="14" Margin="0" VerticalAlignment="Center" Width="Auto" Background="#FF5A88D6"/>
    </Grid>
</UserControl>
