<UserControl x:Class="msgArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:msgUC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer x:Name="sw" Margin="0" Grid.Column="2" >
            <ScrollViewer.Background>
                <RadialGradientBrush>
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFF1F3F5" Offset="1"/>
                </RadialGradientBrush>
            </ScrollViewer.Background>
            <StackPanel x:Name="msgPanel" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  CanVerticallyScroll="True" Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</UserControl>
